<section class="ic-experience_section">
    <div class="ic-experience_section-content iu-container">
        <h3 class="ic-experience_section-title">Experience</h3>
        <div class="ic-experience_section-item">
            <div class="ic-experience_section-marker">
                {{> partials/icon
                    style="fal"
                    icon="university"
                    size="lg"
                }}
            </div>
            <h4 class="ic-experience_section-location">University of Nebraska</h4>
            <p class="ic-experience_section-caption">Web Designer & Developer</p>
            <p class="ic-experience_section-period">Oct 2018 &ndash; Current</p>
