<!-- HERO_PATTERN -->
<header class="hero_pattern">
    <div class="hero_pattern-image" role="img" aria-label="Colorful pattern of icons">
        {{> partials/hero-pattern}}
    </div>
    <div class="hero_pattern-content wrapper">
        <div class="hero_pattern-logo" role="img" aria-label="Miguel Muniz's monogram logo">
            {{> partials/logo}}
        </div>
        <h1 class="hero_pattern-headline">
            <span class="hero_pattern-name">{{title}}</span>
            <span class="hero_pattern-title">{{subtitle}}</span>
        </h1>
    </div>
</header>
